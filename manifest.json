{
  "manifest_version": 3,
  "name": "LinkedIn Email Generator",
  "version": "1.1",
  "description": "Extracts names from LinkedIn and generates emails, saving them to Google Sheets.",
  "permissions": [
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "oauth2": {
    "client_id": "YOUR-CLIENT-ID",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  }
}